---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Accueil</a>
    </li>
    <!-- <li class="menu-item">
      <a href="/blog/">Blog</a>
    </li> -->
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Mes projets</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/pal">PAL</a>
        </li>
        <li class="submenu-item">
          <a href="/wow-scanner-v2/">WoW Scanner V2</a>
        </li>
        <li class="submenu-item">
          <a href="/choose-me-a-game">ChooseMeAGame</a>
        </li>
      </ul>
    </li>
    <!-- <li class="menu-item">
      <a href="https://accessible-astro.dev" title="external link" rel="external noopener noreferrer">External Link</a>
    </li> -->
    <li class="menu-item type-icon">
      <a href="https://github.com/CCatheb" title="Aller sur mon Github">
        <Icon pack="ion" name="logo-github" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
